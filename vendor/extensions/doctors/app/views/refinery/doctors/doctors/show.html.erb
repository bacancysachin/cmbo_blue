<div class="clearfix">
<div class="span3 dotted">
<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="doctors">
      <% @doctors.each do |doctor| %>
        <% if doctor.branch == @doctor.branch && doctor.full_name != @doctor.full_name %>
        <li>
          <%= link_to doctor.prefix + ' ' + doctor.full_name, refinery.doctors_doctor_path(doctor) %>
        </li>
        <% end %>
      <% end %>
    </ul>
  </aside>
<% end %>

</div>

<div class="clearfix">
<% content_for :body do %>
  <section>
    <p>
      <h1><%= @doctor.prefix + ' ' + @doctor.full_name %></h1>
      <h2><%= @doctor.specialty %></h2>
    </p>
  </section>
    <section>
    <h1>Biograf√≠a</h1>
    <p>
      <%=raw @doctor.bio %>
    </p>
  </section>
  <section>
    <strong>Horario: </strong><%=raw @doctor.schedule %>
  </section>
  <section>
    <strong>Consultorio: </strong><%=raw @doctor.location %>
  </section>
<% end %>


<%= render '/refinery/content_page' %>
</div>