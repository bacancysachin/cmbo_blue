<div class"clearfix">
<% content_for :body_content_title do %>
  <%= @branch.name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @branch.name %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="branches">
      <% @branches.each do |branch| %>
        <li>
          <%= link_to branch.name, refinery.doctors_branch_path(branch) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
</div>
